@model MediatrPattern.ViewModel.EmployeeUpdateVm

@{
    ViewBag.Title = "Edit";
    Layout = "_Layout";
}
<partial name="_EmployeeToolbar"/>

<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-header">
                <div class="card-title">
                  <span class="fa fa-edit"></span> Employee
                </div>
            </div>

            <div class="card-body">
                <form asp-action="Edit" asp-controller="Employee" method="post">
                    <div class="form-group">
                        <label asp-for="FirstName"></label>
                        <input asp-for="FirstName" type="text" class="form-control">
                        <span class="text-danger" asp-validation-for="FirstName"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LastName"></label>
                        <input type="text" class="form-control" asp-for="LastName">
                        <span class="text-danger" asp-validation-for="LastName"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Salary"></label>
                        <input type="text" class="form-control" asp-for="Salary">
                        <span class="text-danger" asp-validation-for="Salary"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Address"></label>
                        <input type="text" class="form-control" asp-for="Address">
                        <span class="text-danger" asp-validation-for="Address"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Phone"></label>
                        <input type="text" class="form-control" asp-for="Phone">
                        <span class="text-danger" asp-validation-for="Phone"></span>
                        <button class="btn btn-sm btn-primary mt-2 mb-2" type="submit"><span class="fa fa-check-circle"></span> Save</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
    <div class="col">
        <partial name="_EmployeeInfo" model="@Model.Employee"/>
    </div>
</div>